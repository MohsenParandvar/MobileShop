@model IEnumerable<MobileShop.Models.Product>

@{
    ViewBag.Title = "جابز کالا";
}
<div class="container bg-white rounded border border-0 shadow-1 p-4">
    <div class="row">
        <div class="col-6 rtl text-start">
            <span>
                مشاهده همه>>
            </span>
        </div>
        <div class="col-6 rtl text-end">
            <span>
                
            </span>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col col-3 text-center">
                <img src="~/Images/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="image" width="240"/>
                <p class="text-center">@Html.DisplayFor(modelItem => item.Name)</p>
            </div>
        }
    </div>
</div>
